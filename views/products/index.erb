<h3>Product List</h3>

<table class="product_list">

  <a href="/products/new">Create New Product</a>

  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Brand</th>
      <!-- <th>Category</th>
      <th>Price</th> -->
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= product[:id] %>
      </td>
      <td>
        <%= product[:name] %>
      </td>
      <td>
        <%= product[:brand_id] %>
      </td>
      </td>

      <td>
        <!-- show flow -->
        <a href="/products/<%= product[:id] %>">View</a>&nbsp
        <a href="/products/<%= product[:id] %>/edit">Edit</a>&nbsp
        <!-- <!- delete flow  -->
        <form action="/products/<%= product[:id] %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete">
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
