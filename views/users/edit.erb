<h3>Edit User's Profile</h3>

<div id="new-user">

<form action="/users/<%= @user[:id] %>" method="post">
  <input type="hidden" name="_method" value="put">

  <div class="form-group">
    <label>Name :
      <input type="text" name="user[name]" value="<%= @user[:name] %>">
    </label>
  </div>

  <div class="form-group">
    <label>Address :
      <input type="text" name="user[address]" value="<%= @user[:address] %>">
    </label>
  </div>

  <div class="form-group">
    <label>Email :
      <input type="text" name="user[email]" value="<%= @user[:email] %>">
    </label>
  </div>

  <div class="form-group">
    <label>CC Number :
      <input type="text" name="user[cc_number]" value="<%= @user[:cc_number] %>">
    </label>
  </div>

  <div class="form-group">
    <label>Date Joined :
      <input type="text" name="user[date_joined]" value="<%= @user[:date_joined] %>">
    </label>
  </div>

  <input id="submit-button" type="submit" value="Proceed to Update">

</form>

</div>
