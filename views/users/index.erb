<h3>All users list</h3>

<table class="user_list">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= user[:id] %>
      </td>
      <td>
        <%= user[:name] %>
      </td>

      <td>
        <!-- show flow -->
        <a href="/users/<%= user[:id] %>">View</a>&nbsp&nbsp
        <a href="/users/<%= user[:id] %>/edit">Edit</a>&nbsp&nbsp
        <!-- delete flow  -->
        <form action="/users/<%= user[:id] %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete">
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
